! urxvt config

! URxvt Appearance
URxvt*termName:  screen-256color
URxvt.geometry: 84x24
URxvt.internalBorder: 16
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.scrollBar: false
URxvt.scrollBar_right: false

! fonts
URxvt.font: xft:DejaVu Sans Mono:style:Book:size=10
URxvt.boldFont: xft:DejaVu Sans Mono:style:Bold:size=10
URxvt.italicFont: xft:DejaVu Sans Mono:style:Oblique:size=10
URxvt.boldItalicfont: xft:DejaVu Sans Mono:style:Bold Oblique:size=10
URxvt.letterSpace: 0
URxvt.lineSpace: 0

! etc
URxvt.saveline:0
URxvt.urgentOnBell: true
URxvt.iso14755: false
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007

! colors
URxvt*cursorColor: #f5f5dc
URxvt*pointerColor: #f5f5dc
URxvt.foreground: #f5f5dc
URxvt.background: #31312c
! black
URxvt.color0: #31312c
URxvt.color8:  #31312c
! red
URxvt.color1: #cc241d
URxvt.color9: #fb4934
! green
URxvt.color2: #98971a
URxvt.color10: #b8bb26
! yellow / orange
URxvt.color3: #d79921
URxvt.color11: #fabd2f
!blue
URxvt.color4: #458588
URxvt.color12: #83a598
! magenta
URxvt.color5: #b16286
URxvt.color13: #d3869b
! cyan
URxvt.color6: #689d6a
URxvt.color14: #8eco7c
! white
URxvt.color7: #f5f5dc
URxvt.color15: #f5f5dc
